extends layout.pug

block content
    div(class="bkgd-div-right")
        img(src="../fume.png" id='bkgd2')
    div(class='home-header-container')
        div(class='home-header') #{author.firstName} #{author.lastName}'s Hobby Posts
        each post in hobbyPosts
            div(class='post-group')
                div(class='name-and-date-group users')
                    p(class='home-page-post-author')= `${post.User.firstName} ${post.User.lastName}`
                    div(class='home-page-share-date' id='share-date') #{post.createdAt.toLocaleDateString(undefined, options)}
                div(class='title-link-container users')
                    a(class='home-page-title-link' href=`/hobbyposts/${post.id}`) #{post.title}
                //- div= post.title
                //- div= post.content
                if locals.user
                    if locals.user.id === post.userId
                        div(class='edit-delete-container')
                            a(href= `/hobbyposts/${post.id}/edit` class='btn') Edit
