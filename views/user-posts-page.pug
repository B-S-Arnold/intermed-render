extends layout.pug

block content
    each post in hobbyPosts
        div= `${post.User.firstName} ${post.User.lastName}`

        div= post.createdAt.toLocaleDateString(undefined, options)
        div= post.title
        div= post.content

        if locals.user.id === user.id
            a(href= `/hobbyposts/${post.id}/edit`)
