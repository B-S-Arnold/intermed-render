doctype html
html
  div(class="bkgd-div-left")
    img(src="../background4.png" id='bkgd')
  
  head
      block head
        title="InterMedium"
        link(rel='icon' type='image/png' href='/logo.ico' size="32x32")
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/hobbypost.css')
        link(rel='stylesheet' href='/stylesheets/homepage.css')
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel='stylesheet' href='/stylesheets/errors.css')

  body
        
        if locals.authenticated
          div(class='container login-head')
            div(class='left-side')
              a(class='home' href='/')
                img(src="https://img.icons8.com/ios-filled/50/000000/medium-logo.png" id='imgLogo')
              a(class='home text' href='/') Intermedium
              span(class='welcome') Welcome #{user.firstName}!
            div(class='buttons-container')
              form(class='share-hobby' action='/hobbyPosts/new' method='get')
                button(class='btn' type='submit') Share Your Hobby
              form(class='logout' action='/users/logout' method='post')
                button(class='btn' type='submit') Logout
        else
          div(class='container login-head invisible')
            div(class='left-side')
                a(class='home' href='/')
                  img(src="https://img.icons8.com/ios-filled/50/000000/medium-logo.png" id='imgLogo')
                a(class='home text' href='/') Intermedium
            div(class='buttons-container')
                a(class='btn' href='/login') Login
                a(class='btn' href='/users/sign-up') Register
                a(class='btn' href='/login/demo-login') Login As Demo User
        
        block content
