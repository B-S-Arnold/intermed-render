doctype html
html
  head
      block head
        title="Intermediate"
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
        if locals.authenticated
          div(class='container login-head')
            a(class='home' href='/') Home
            span(class='welcome') Welcome #{user.firstName}!
            form(class='share-hobby' action='/hobbyPosts/new' method='get')
              button(class='share-hobby-button' type='submit') Share Your Hobby
            form(class='logout' action='/users/logout' method='post')
              button(class='logout-button' type='submit') Logout
        else
          div(class='container')
            div(class='navbar')
                div
                  a(class='home' href='/') Home
                div
                  a(class='login space' href='/login') Login
                  a(class='register space' href='/users/sign-up') Register
                  a(class='demo-user space' href='/login/demo-login') Login As Demo User
        block content
