extends layout.pug

include utils.pug

block content
  link(rel='stylesheet' href='/stylesheets/log-reg.css')
  +validationErrorSummary(errors)
  form(action='/users/sign-up' method='post')
    div(class='log-bod')
      h1(class='log-title') Register 
      input(class='input' type='hidden' name='_csrf' value=csrfToken)
      +field('First Name', 'firstName', user.firstName)
      +field('Last Name', 'lastName', user.lastName)
      +field('Email Address', 'email', user.email)
      +field('Password', 'password', user.password, 'password')
      +field('Confirm Password', 'confirmPassword', '', 'password')
      div(class='register-buttons btndiv')
        button(type='submit' class='register-submit leftbtn btn') Register
        a(href='/' class='register-cancel rightbtn btn') Cancel