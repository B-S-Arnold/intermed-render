extends layout.pug

include utils.pug


block content
    link(rel='stylesheet' href='/stylesheets/new-hobby.css')
    +validationErrorSummary(errors)
    div(id='test')
        form(action='/hobbyPosts/new' method='post' class='new-post-form')
            input(type='hidden' name='_csrf' value=csrfToken)
            div
                label(class='new-post-form-label')
                input(type='text' name='title' value=title size='40' placeholder='title...' class='new-post-form-input' id='input-styling' required)
            div
                label(class='new-post-form-label')
                textarea(name='content' placeholder='Share your hobby..' value=content required rows='40' cols='80' class='new-post-form-textarea')
            div(id='post-cancel')
                button(type='submit' class='btnPost hover' id='testing') Post
                a(href='/' class='btnPost hover') Cancel
