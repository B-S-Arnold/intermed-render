doctype html
html
  head
      block head
        title="Intermediate"
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body

    a(class='home' href='/') Home
    if locals.authenticated
      if 
      span(class='welcome') Welcome #{user.firstName}!
      form(class='logout' action='/users/logout' method='post')
        button(class='logout-button' type='submit') Logout
    else
      span(class='login-and-register')
        a(class='login' href='/login') Login
        a(class='register' href='/users/sign-up') Register
        a(class='demo-user' href='/login/demo-login') Login As Demo User
    block content
